{
  "compilerOptions": {
    "target": "ESNext", // modern JS target
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // include browser and ES features
    "allowJs": true, // allow JS files
    "skipLibCheck": true, // skip type checking of node_modules
    "strict": true, // enable strict type checking
    "noEmit": true, // do not emit JS files (Next handles it)
    "module": "ESNext", // ES module system
    "moduleResolution": "node", // resolve modules like Node
    "resolveJsonModule": true, // allow importing JSON
    "isolatedModules": true, // needed for Next.js
    "jsx": "preserve", // important: enables JSX.Element typing
    "baseUrl": ".", // base directory
    "incremental": true, // incremental compilation
    "esModuleInterop": true, // interop for CommonJS modules
    "forceConsistentCasingInFileNames": true, // enforce consistent file names
    "plugins": [
      {
        "name": "next"
      }
    ] // Next.js plugin
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
